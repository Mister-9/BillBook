<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mr9.billgenerator.NewBillActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/text_newBillNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/billNo"
        android:textAlignment="center"
        android:textColor="@color/theme_button_color"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_newBillNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/billNo"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_newBillSubmit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_bill" />

</LinearLayout>
